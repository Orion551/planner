{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@planner/*": ["./*"],
      "@Components/*": ["../src/Components/*"],
      "@Assets/*": ["../src/Assets/*"],
      "@Pages/*": ["../src/Pages/*"],
      "@Utils/*": ["../src/Utils/*"],
      "@Api/*": ["../src/Api/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
